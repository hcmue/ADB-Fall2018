@model ASP.NETCouchdb.Models.SanPham

@{
    ViewBag.Title = "EditSanPham";
}

<!DOCTYPE html>

<form action="EditSanPham" method="post" enctype="multipart/form-data">
    <div>
        <h4>Sửa sản phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </dt>
            <dd>
                <div class="form-group">
                    <div class="col-md-6">
                        <span>@Model.TenSanPham</span>
                        <input type="text" name="TenSanPham" value="@Model.TenSanPham" style="display:none"/>
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.MoTa)
            </dt>

            <dd>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </dd>
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.Hinh)
            </dt>

            <dd>
                <div class="form-group">
                    <div class="col-md-6">
                        <img src="~/Content/images/@Model.Hinh" alt="Alternate Text" />
                        <input type="file" name="file" id="fHinh"  />

                    </div>
                </div>
            </dd>
            
            <br />
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>

            <dd>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>
            </dd>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "EditSanPham", new { id = Model.TenSanPham }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</form>
